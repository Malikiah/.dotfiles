[color]
;; Active Colors
;;bg = #1e1f29
bg = #2b2d3b
fg = #f8f8f2
fg-alt = #9C9C9C

trans = #00000000
white = #FFFFFF
black = #000000

;; Material Colors
red = #e53935
pink = #d81b60
purple = #8e24aa
deep-purple = #5e35b1
indigo = #3949ab
blue = #1e88e5
light-blue = #039be5
cyan = #00acc1
teal = #00897b
green = #43a047
light-green = #7cb342
lime = #c0ca33
yellow = #fdd835
amber = #ffb300
orange = #fb8c00
deep-orange = #f4511e
brown = #6d4c41
grey = #757575
blue-gray = #546e7a

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
; Used for top aligned bars
margin-bottom = 0

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
; Used for bottom aligned bars
margin-top = 0

[bar/mainbar0]
inherit = bar/barbase0
modules-left = workspace0
tray-position = center
tray-detached = false
tray-maxsize = 20
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0

[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t "$SCRIPTPATH/template.liquid"
tail = true

[bar/barbase0]
width = 100%
monitor = ${env:monitor}
offset-x = 0
offset-y = 0
height = 40
fixed-center = true
bottom = false

background = ${color.bg}
foreground = ${color.fg}

#radius-top = 0
#radius-bottom = 0

padding = 2
module-margin-left = 0
module-margin-right = 3

font-0 = "SauceCodePro Nerd Font:size=13:weight=semibold;3"
modules-center = 
modules-right = aur-updates pulseaudio night-light network wireless sysmenu date

enable-ipc = true

[bar/mainbar1]
inherit = bar/barbase1
modules-left = workspace1
#tray-position = center
#tray-detached = false
#tray-maxsize = 20
#tray-offset-x = 0
#tray-offset-y = 0
#tray-padding = 0
#tray-scale = 1.0

[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t "$SCRIPTPATH/template.liquid"
tail = true

[bar/barbase1]
width = 100%
monitor = ${env:monitor}
offset-x = 0
offset-y = 0
height = 40
fixed-center = true
bottom = false

background = ${color.bg}
foreground = ${color.fg}

radius-top = 0
radius-bottom = 0

padding = 2
module-margin-left = 0
module-margin-right = 3

font-0 = "SauceCodePro Nerd Font:size=13:weight=semibold;3"
modules-center = 
modules-right = pulseaudio network wireless sysmenu date
enable-ipc = true

[settings]
throttle-output = 5
throttle-output-for = 10

screenchange-reload = false

#compositing-background = source
#compositing-foreground = over
#compositing-overline = over
#compositing-underline = over
#compositing-border = over
pseudo-transparency = false

;; Modules

[module/ewmh]
type = internal/xworkspaces

pin-workspaces = true
enable-click = true
enable-scroll = true
format = <label-state>

label-monitor = %name%

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false

format-volume = <ramp-volume>

label-volume = %percentage%%

label-muted = ﱝ
label-muted-foreground = ${color.fg-alt}
label-muted-font = 2

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 =  
ramp-volume-3 =   

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date]
type = internal/date
interval = 1.0

time = %H:%M %a %B %d%

format = <label>
label = %time%

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/activity]
type = custom/text

content = "Applications"
content-foreground = ${color.fg}

click-left = rofi -no-config -no-lazy-grab -show drun -theme $HOME/.config/leftwm/themes/current/rofi/launcher.rasi
click-right = rofi -no-config -no-lazy-grab -show drun -theme $HOME/.config/leftwm/themes/current/rofi/launcher.rasi

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/sysmenu]
type = custom/text

content = 襤
content-foreground = ${color.fg}

click-left = $HOME/.config/leftwm/themes/current/rofi/powermenu.sh
click-right = $HOME/.config/leftwm/themes/current/rofi/powermenu.sh

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/network]
type = internal/network
interface = enp7s0

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <label-packetloss>

label-connected = 
label-disconnected = 
label-disconnected-foreground = ${color.fg-alt}
#label-packetloss = 

[module/wireless]
type = internal/network
interface = wlp8s0

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <label-packetloss>

label-connected = 直
label-disconnected = 睊
label-disconnected-foreground = ${color.fg-alt}

[module/aur-updates]
type= custom/script
exec = checkupdates | wc -l
interval = 1000
label = %output% 
format-foreground = ${colors.foreground}
format-background = ${colors.background}
; click-left = $HOME/.config/leftwm/themes/current/rofi/package_menu.sh

[module/night-light]
type = custom/script
exec = if (( $(pgrep gammy | wc -l) == 1)); then echo ""; else echo "";fi
click-left = $HOME/.config/leftwm/themes/current/night-light.sh
interval = .1
